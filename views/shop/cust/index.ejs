<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Customers | AGRO FERTILIZER</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #2e7d32;
      --primary-dark: #1b5e20;
      --primary-light: #a5d6a7;
      --accent: #ff9800;
      --danger: #e53935;
      --danger-dark: #c62828;
      --text-dark: #212121;
      --text-muted: #616161;
      --bg-light: #f8f9fa;
      --card-bg: #ffffff;
      --border-radius: 16px;
      --shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
      --transition: all 0.3s ease;
    }

    body {
      font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
      background: linear-gradient(135deg, #e8f5e9, #f1f8e9);
      margin: 0;
      padding: 0;
      min-height: 100vh;
      color: var(--text-dark);
    }

    .container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 20px;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
      padding-bottom: 15px;
      border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    }

    h1 {
      color: var(--primary-dark);
      font-size: 2.2rem;
      font-weight: 700;
      margin: 0;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    h1 i {
      color: var(--primary);
    }

    .header-actions {
      display: flex;
      gap: 15px;
      align-items: center;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 10px 18px;
      border-radius: var(--border-radius);
      font-weight: 600;
      text-decoration: none;
      transition: var(--transition);
      cursor: pointer;
      border: none;
      font-size: 0.95rem;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--primary), var(--primary-dark));
      color: white;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(46, 125, 50, 0.3);
    }

    .btn-danger {
      background: linear-gradient(135deg, var(--danger), var(--danger-dark));
      color: white;
      padding: 6px 12px;
      font-size: 0.85rem;
    }

    .btn-danger:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(229, 57, 53, 0.3);
    }

    .customers-container {
      background-color: var(--card-bg);
      border-radius: var(--border-radius);
      box-shadow: var(--shadow);
      overflow: hidden;
    }

    .customers-header {
      background: linear-gradient(135deg, var(--primary), var(--primary-dark));
      color: white;
      padding: 15px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .customers-count {
      font-weight: 600;
      font-size: 1.1rem;
    }

    .customers-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .customer-item {
      padding: 20px;
      border-bottom: 1px solid #f0f0f0;
      transition: var(--transition);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .customer-item:last-child {
      border-bottom: none;
    }

    .customer-item:hover {
      background-color: #f9f9f9;
      transform: translateX(5px);
    }

    .customer-info {
      flex: 1;
    }

    .customer-name {
      font-size: 1.2rem;
      font-weight: 600;
      margin: 0 0 5px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .customer-name a {
      text-decoration: none;
      color: var(--text-dark);
      transition: var(--transition);
    }

    .customer-name a:hover {
      color: var(--primary);
    }

    .customer-details {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
    }

    .customer-detail {
      display: flex;
      align-items: center;
      gap: 5px;
      color: var(--text-muted);
      font-size: 0.9rem;
    }

    .customer-detail i {
      width: 16px;
      color: var(--primary);
    }

    .customer-actions {
      display: flex;
      gap: 10px;
    }

    .empty-state {
      text-align: center;
      padding: 40px 20px;
      color: var(--text-muted);
    }

    .empty-state i {
      font-size: 3rem;
      margin-bottom: 15px;
      color: var(--primary-light);
    }

    .empty-state h3 {
      margin: 0 0 10px;
      font-weight: 600;
    }

    .empty-state p {
      margin: 0;
    }

    .search-container {
      background-color: var(--card-bg);
      border-radius: var(--border-radius);
      padding: 20px;
      box-shadow: var(--shadow);
      margin-bottom: 25px;
    }

    .search-form {
      display: flex;
      gap: 10px;
    }

    .search-input {
      flex: 1;
      padding: 12px 15px;
      border: 1px solid #e0e0e0;
      border-radius: var(--border-radius);
      font-size: 1rem;
      transition: var(--transition);
    }

    .search-input:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 2px rgba(46, 125, 50, 0.2);
    }

    .search-btn {
      background: linear-gradient(135deg, var(--primary), var(--primary-dark));
      color: white;
      border: none;
      border-radius: var(--border-radius);
      padding: 0 20px;
      cursor: pointer;
      transition: var(--transition);
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .search-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(46, 125, 50, 0.3);
    }

    @media (max-width: 768px) {
      header {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
      }
      
      .customer-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
      }
      
      .customer-actions {
        width: 100%;
        justify-content: flex-end;
      }
      
      .search-form {
        flex-direction: column;
      }
      
      .search-btn {
        justify-content: center;
        padding: 12px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <h1><i class="fas fa-users"></i> All Customers</h1>
      <div class="header-actions">
        <a href="/dash" class="btn" style="background-color: white; color: var(--text-dark); border: 1px solid #e0e0e0;">
          <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
        <form method="GET" action="/cust/new" style="display: inline;">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Add New Customer
          </button>
        </form>
      </div>
    </header>

    <div class="search-container">
      <form method="GET" action="/cust" class="search-form">
        <input 
          type="text" 
          name="search" 
          placeholder="Search customers by name, email, or phone..." 
          class="search-input">
        <button type="submit" class="search-btn">
          <i class="fas fa-search"></i> Search
        </button>
      </form>
    </div>

    <div class="customers-container">
      <div class="customers-header">
        <div class="customers-count">
          <% if (allcustomers.length === 0) { %>
            No Customers Found
          <% } else { %>
            <%= allcustomers.length %> Customer<%= allcustomers.length !== 1 ? 's' : '' %>
          <% } %>
        </div>
      </div>

      <ul class="customers-list">
        <% if (allcustomers.length === 0) { %>
          <div class="empty-state">
            <i class="fas fa-user-slash"></i>
            <h3>No customers found</h3>
            <p>Click "Add New Customer" to create your first customer</p>
          </div>
        <% } else { %>
          <% for(let customer of allcustomers) { %>
            <li class="customer-item">
              <div class="customer-info">
                <h3 class="customer-name">
                  <i class="fas fa-user-circle"></i>
                  <a href="/cust/<%= customer._id %>"><%= customer.name %></a>
                </h3>
                <div class="customer-details">
                  <div class="customer-detail">
                    <i class="fas fa-map-marker-alt"></i>
                    <%= customer.address %>
                  </div>
                  <div class="customer-detail">
                    <i class="fas fa-phone"></i>
                    <%= customer.phone %>
                  </div>
                  <div class="customer-detail">
                    <i class="fas fa-envelope"></i>
                    <%= customer.email %>
                  </div>
                </div>
              </div>
              <div class="customer-actions">
                <form method="POST" action="/cust/<%= customer._id %>?_method=DELETE" style="display: inline;">
                  <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer?')">
                    <i class="fas fa-trash"></i> Delete
                  </button>
                </form>
              </div>
            </li>
          <% } %>
        <% } %>
      </ul>
    </div>
  </div>

  <script>
    const urlParams = new URLSearchParams(window.location.search);
    const msg = urlParams.get("msg");

    if (msg === "customer") {
      const speech = new SpeechSynthesisUtterance("New customer added successfully");
      speech.lang = "en-IN";
      speech.rate = 1;
      window.speechSynthesis.speak(speech);
    }
  </script>
</body>
</html>